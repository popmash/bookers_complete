<h2>Books</h2>
<div>
 <%= link_to '新しい順', books_path(latest: "true") %>|
 <%= link_to '古い順', books_path(old: "true") %>|
 <%= link_to '評価の高い順', books_path(star_count: "true") %>
 </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th colspan></th>
          <th>Title</th>
          <th>Opinion</th>
          <th>Tag</th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <% books.each do |book| %>
        <tr>
         <td>
           <%= link_to book.user do %>
           <%= image_tag book.user.get_profile_image,size: '80x80' %>
           <% end %>
           </td>
         <td><%= link_to book.title, book_path(book) %></td>
         <td><%= book.body %></td>
         <td><%= book.tag %></td>
           <td id="favorite_button<%= book.id %>">
             <%= render 'favorites/favorite', book: book %>
            </td>
         <td><%= render 'book_comments/counter', book: book %></td>
         <td>閲覧数: <%= book.view_counts.count %></td>
         <td><%= render 'books/static_rate',book: book %></td>
        </tr>
        <% end %>
      </tbody>
    </table>