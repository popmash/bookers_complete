<h2>Books</h2>
<table class="table table-hover">
  <thead>
    <tr>
     <th cplspan="3"></th>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
  </thead>
  <tbody >
    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to book.user do%>
        <%= image_tag book.user.get_profile_image,size: '80x80' %>
        <% end %>
        </td>
      <td><%= link_to book.title, book %></td>
      <td><%= book.body %></td>
      <td><%= render'books/static_rate', book: book %></td>
    </tr>
    <% end %>
  </tbody>
</table>